{
  "compilerOptions": {
    "target": "es2017", // or "esnext"
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false, // set to true only if you have JS files
    "skipLibCheck": false, // consider enabling for strict type checking
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // keep this if using a bundler
    "jsx": "react-jsx", // or "react" based on your React version,
    "noImplicitAny": false
  },
  "include": ["src"]
}
